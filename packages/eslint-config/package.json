{
  "name": "@feryardiant/eslint-config-standard",
  "version": "0.0.0",
  "description": "My personal commitlint config based on eslint-config-standard and eslint-config-prettier",
  "author": "Fery Wardiyanto <ferywardiyanto@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/feryardiant/feryardiant.git",
    "directory": "packages/eslint-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    ".eslintrc.js",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint *.js",
    "lint:fix": "eslint --fix *.js",
    "release": "standard-version"
  },
  "dependencies": {
    "eslint-config-prettier": "~8.3",
    "eslint-config-standard": "~16.0",
    "eslint-plugin-import": "~2.23",
    "eslint-plugin-node": "~11.1",
    "eslint-plugin-prettier": "~3.4",
    "eslint-plugin-promise": "~5.1",
    "prettier-config-standard": "~4.0",
    "standard-version": "^9.0"
  },
  "devDependencies": {
    "eslint": "~7.30",
    "prettier": "~2.3"
  },
  "peerDependencies": {
    "eslint": "~7.30",
    "prettier": "~2.3"
  },
  "standard-version": {
    "skip": {
      "tag": true,
      "changelog": true
    }
  }
}
